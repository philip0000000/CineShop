@model CineShop.Models.User

@* DEMO Version*@

@{
    ViewData["Title"] = "Create Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <h1 class="text-warning text-center fw-bold mb-4">
        <i class="fa fa-user-plus me-2"></i> Join CineShop
    </h1>
    <p class="lead text-light text-center mb-4">
        Create your free account to start collecting favorites, tracking orders, and enjoying cozy movie nights.
    </p>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-dark text-light border-warning shadow-sm">
                <div class="card-body">
                    <form asp-action="Register">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label text-warning fw-semibold">Username</label>
                            <input asp-for="UserName" class="form-control bg-dark text-light border-warning" placeholder="Choose a username" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label text-warning fw-semibold">Password</label>
                            <input asp-for="Password" type="password" class="form-control bg-dark text-light border-warning" placeholder="Create a secure password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <input type="submit" value="Sign Up" class="btn btn-warning fw-bold" />
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-warning fw-bold">
                    <i class="fa-solid fa-house"></i> Back to Home
                </a>
            </div>
        </div>
    </div>
</div>


