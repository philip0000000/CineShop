@model CineShop.Models.User

@{
    ViewData["Title"] = "Admin Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
   
    <div class="text-center mb-5">
        <h1 class="text-warning fw-bold display-5">
            <i class="fa fa-user-shield me-2"></i> Admin Access
        </h1>
        <p class="lead text-light">
            Log in to manage your CineShop universe and access the admin dashboard.
        </p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-dark border-warning shadow-sm">
                <div class="card-header text-warning fw-semibold">
                    <i class="fa fa-lock me-2"></i> Secure Login
                </div>
                <div class="card-body">
                    <form asp-action="ProccessLogin" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label text-warning fw-semibold"></label>
                            <input asp-for="UserName" class="form-control bg-dark text-light border-warning" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label text-warning fw-semibold"></label>
                            <input asp-for="Password" type="password" class="form-control bg-dark text-light border-warning" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-warning fw-bold">
                                <i class="fa fa-sign-in-alt me-2"></i> Login
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            
            <div class="text-center mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-warning btn-lg fw-semibold">
                    <i class="fa-solid fa-house me-2"></i> Back to Home
                </a>
            </div>
        </div>
    </div>
</div>
