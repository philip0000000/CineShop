@model CineShop.Models.User

@{
    ViewData["Title"] = "Login Successful";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
  
    <div class="text-center mb-5">
        <h1 class="text-success fw-bold display-5">
            <i class="fa fa-check-circle me-2"></i> Login Successful!
        </h1>
        <p class="lead text-light">
            Welcome back, <span class="text-warning fw-semibold">@Model.UserName</span>. You're now logged in as an admin.
        </p>
    </div>

   
    <div class="row justify-content-center mb-5">
        <div class="col-md-8">
            <div class="card bg-dark border-success shadow-sm">
                <div class="card-header text-success fw-semibold">
                    <i class="fa fa-user me-2"></i> Admin Credentials
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-warning">Username</dt>
                        <dd class="col-sm-8 text-light">@Model.UserName</dd>

                        <dt class="col-sm-4 text-warning">Password</dt>
                        <dd class="col-sm-8 text-light">@Model.Password</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

   
    <div class="text-center d-flex justify-content-center flex-wrap gap-3">
        <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-warning btn-lg fw-semibold px-4 shadow-sm">
            <i class="fa fa-tools me-2"></i> Admin Dashboard
        </a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-success btn-lg fw-semibold px-4 shadow-sm">
            <i class="fa-solid fa-house me-2"></i> Back to Home
        </a>
    </div>
</div>

