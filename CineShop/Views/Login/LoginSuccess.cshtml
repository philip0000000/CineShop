@model CineShop.Models.User

@{
    ViewData["Title"] = "Login Successful";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="text-center mb-4">
        <h1 class="text-success fw-bold">
            <i class="fa fa-check-circle me-2"></i> Login Successful!
        </h1>
        <p class="lead text-light">
            Welcome back, <span class="text-warning fw-semibold">@Model.UserName</span>. You're now logged in as an admin.
        </p>
    </div>

    <div class="card bg-dark text-light border-success shadow-sm mb-4">
        <div class="card-header text-success fw-semibold">
            <i class="fa fa-user me-1"></i> User Details
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 text-warning">Username</dt>
                <dd class="col-sm-9">@Model.UserName</dd>

                <dt class="col-sm-3 text-warning">Password</dt>
                <dd class="col-sm-9">@Model.Password</dd>
            </dl>
        </div>
    </div>

    <div class="d-flex justify-content-center gap-3">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning fw-bold">
            <i class="fa-solid fa-user-pen"></i> Edit Profile
        </a>
        <a asp-controller="Admin" asp-action="Index" class="btn btn-warning btn-lg fw-bold px-4  shadow-sm">
            <i class="fa fa-tools me-2"></i> Admin Dashboard
        </a>



        <a asp-action="Index" class="btn btn-warning fw-bold">
            <i class="fa-solid fa-house"></i> Back to Home
        </a>

    </div>
</div>
