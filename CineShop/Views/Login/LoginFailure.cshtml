@model CineShop.Models.User

@{
    ViewData["Title"] = "Login Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
   
    <div class="text-center mb-5">
        <h1 class="text-danger fw-bold display-5">
            <i class="fa fa-exclamation-triangle me-2"></i> Login Failed
        </h1>
        <p class="lead text-light">
            The credentials you entered appear to be incorrect. Please double-check and try again.
        </p>
    </div>

    
    <div class="row justify-content-center mb-5">
        <div class="col-md-8">
            <div class="card bg-dark border-danger shadow-sm">
                <div class="card-header text-danger fw-semibold">
                    <i class="fa fa-user-times me-2"></i> Invalid Credentials
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-warning">Username</dt>
                        <dd class="col-sm-8 text-light">@Model.UserName</dd>

                        <dt class="col-sm-4 text-warning">Password</dt>
                        <dd class="col-sm-8 text-light">@Model.Password</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

   
    <div class="text-center d-flex justify-content-center flex-wrap gap-3">
        <a asp-controller="Login" asp-action="Index" class="btn btn-outline-warning btn-lg fw-semibold px-4 shadow-sm">
            <i class="fa-solid fa-rotate-right me-2"></i> Try Again
        </a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-success btn-lg fw-semibold px-4 shadow-sm">
            <i class="fa-solid fa-house me-2"></i> Back to Home
        </a>
    </div>
</div>
