@model CineShop.Models.User

@{
    ViewData["Title"] = "Login Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="text-center mb-4">
        <h1 class="text-danger fw-bold">
            <i class="fa fa-exclamation-triangle me-2"></i> Oops... Something Went Wrong!
        </h1>
        <p class="lead text-light">
            The login information you entered appears to be incorrect. Please double-check and try again.
        </p>
    </div>

    <div class="card bg-dark text-light border-danger shadow-sm mb-4">
        <div class="card-header text-danger fw-semibold">
            <i class="fa fa-user-times me-1"></i> Invalid Credentials
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 text-warning">Username</dt>
                <dd class="col-sm-9">@Model.UserName</dd>

                <dt class="col-sm-3 text-warning">Password</dt>
                <dd class="col-sm-9">@Model.Password</dd>
            </dl>
        </div>
    </div>

    <div class="d-flex justify-content-center gap-3">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-warning">
            <i class="fa fa-edit me-1"></i> Try Again
        </a>
        <a asp-action="Index" class="btn btn-outline-light">
            <i class="fa fa-arrow-left me-1"></i> Back to Home
        </a>
    </div>
</div>
