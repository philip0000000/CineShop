@model CineShop.ViewModels.HomeStatisticsViewModel

@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var role = Context.Session.GetString("UserRole");
    var isAdmin = role == "Admin";
}

<div class="container py-5 @(isAdmin ? "admin-theme" : "")">
    <!-- Admin Banner -->
    @if (isAdmin)
    {
        <div class="admin-banner text-dark fw-bold text-center py-2 mb-4 rounded shadow-sm">
            <i class="fa fa-user-shield me-2"></i> You are logged in as <span class="text-uppercase">ADMIN</span>
        </div>

    }
    @if (isAdmin)
    {
        <div class="d-flex justify-content-center flex-wrap gap-3 mt-4">
            <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-success fw-semibold px-4 shadow-sm">
                <i class="fa fa-tools me-2"></i> Admin Dashboard
            </a>
            <a asp-controller="Login" asp-action="Logout" class="btn btn-outline-danger fw-semibold px-4 shadow-sm">
                <i class="fa fa-right-from-bracket me-2"></i> Logga ut
            </a>
        </div>
    }


    <!-- Welcome Header -->
    <div class="text-center mb-5">
        <h1 class="display-4 text-warning fw-bold">
            Welcome to CineShop
        </h1>
        <p class="lead text-light">
            @if (isAdmin)
            {
                <span>Manage your movie empire—curate content, track orders, and oversee customer experiences.</span>
            }
            else
            {
                <span>Your cozy corner for movie magic—explore timeless classics, fresh releases, and hidden gems.</span>
            }
        </p>
        <div class="mt-4">
            <a class="btn btn-warning btn-lg fw-semibold px-4 shadow-sm" asp-controller="Movies" asp-action="Index">
                <i class="fa fa-film me-2"></i> Browse Movies
            </a>
        </div>
    </div>

    <!-- Popular Movies -->
    <div class="col-md-12">
        <h2 class="text-warning text-center mb-4">
            <i class="fa fa-fire me-2"></i> Most Popular Movies
        </h2>

        @if (Model.MostPopularMovies?.Any() == true)
        {
            <div class="row g-4 justify-content-center">
                @foreach (var movie in Model.MostPopularMovies)
                {
                    <div class="col text-center">
                        <img src="@movie.Image" alt="@movie.Title poster"
                             class="img-fluid rounded mb-3 movie-poster border border-warning"
                             style="height: 250px; object-fit: cover; transition: transform 0.3s ease;"
                             onmouseover="this.style.transform='scale(1.05)'"
                             onmouseout="this.style.transform='scale(1)'" />

                        <h5 class="text-light fw-semibold">@movie.Title</h5>

                        <div class="d-flex justify-content-center gap-2">
                            <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id"
                               class="btn btn-outline-info btn-sm">
                                <i class="fa fa-info-circle me-1"></i> Details
                            </a>

                            <!-- Add to cart POST form -->
                            <form asp-controller="Cart" asp-action="Add" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="movieId" value="@movie.Id" />
                                <button type="submit" class="btn btn-outline-success btn-sm">
                                    <i class="fa fa-cart-plus me-1"></i> Add to Cart
                                </button>
                            </form>

                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-muted text-center">No popular movies available at the moment.</p>
        }
    </div>
</div>




 