@model CineShop.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <h2 class="text-danger text-center fw-bold mb-4">
        <i class="fa fa-user-slash me-2"></i> Delete Customer
    </h2>
    <p class="text-light text-center mb-4">
        Are you sure you want to delete <span class="text-warning fw-semibold">@Model.FirstName @Model.LastName</span>?
        <br />This action <strong>cannot be undone</strong> and will affect all related history including orders, licenses, and activity logs.
    </p>

    <div class="card bg-dark text-light border-danger shadow-sm mx-auto" style="max-width: 700px;">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4 text-warning">Full Name</dt>
                <dd class="col-sm-8">@Model.FirstName @Model.LastName</dd>

                <dt class="col-sm-4 text-warning">Email</dt>
                <dd class="col-sm-8">@Model.EmailAddress</dd>

                <dt class="col-sm-4 text-warning">Phone</dt>
                <dd class="col-sm-8">@Model.PhoneNo</dd>

                <dt class="col-sm-4 text-warning">Billing Address</dt>
                <dd class="col-sm-8">@Model.BillingAddress, @Model.BillingCity, @Model.BillingZip</dd>

                <dt class="col-sm-4 text-warning">Delivery Address</dt>
                <dd class="col-sm-8">@Model.DeliveryAddress, @Model.DeliveryCity, @Model.DeliveryZip</dd>
            </dl>

            <form asp-action="DeleteCustomer" method="post" onsubmit="return confirm('Are you sure you want to delete this customer and all related history?')">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger fw-bold">
                    <i class="fa-solid fa-trash"></i> Delete
                </button>
                <a asp-action="Index" asp-controller="Admin" class="btn btn-warning fw-bold ms-2">
                    <i class="fa-solid fa-xmark"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>
