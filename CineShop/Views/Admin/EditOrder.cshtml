@model CineShop.Models.Order

@{
    ViewData["Title"] = "Edit Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <h1 class="text-warning text-center fw-bold mb-4">
        <i class="fa fa-edit me-2"></i> Edit Order
    </h1>
    <p class="lead text-light text-center mb-4">
        Update order details below. Changes will be saved immediately.
    </p>

    <form asp-action="EditOrder" method="post" class="bg-dark border border-warning rounded p-4 shadow-sm text-light">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="OrderDate" class="form-label text-warning"></label>
            <input asp-for="OrderDate" class="form-control" type="date" />
            <span asp-validation-for="OrderDate" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CustomerId" class="form-label text-warning">Customer ID</label>
            <input asp-for="CustomerId" class="form-control" />
            <span asp-validation-for="CustomerId" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label class="form-label text-warning">Total Items</label>
            <input class="form-control" value="@((Model.OrderRows?.Count()) ?? 0)" disabled />
        </div>

       <div class="mb-3">
            <label class="form-label text-warning">Total Price</label>
            
            <input class="form-control"
                   value="@( (Model.OrderRows?.Sum(row => row.Price) ?? 0m).ToString("C") )"
                   disabled />

       </div> 

        <div class="d-flex justify-content-center gap-3 mt-4">
            <button type="submit" class="btn btn-success btn-lg">
                <i class="fa fa-save me-1"></i> Save Changes
            </button>
            
            <a asp-action="Orders" class="btn btn-warning btn-lg fw-bold px-4  shadow-sm">
                <i class="fa-solid fa-xmark"></i> Cancel
            </a>
        </div>
    </form>
</div>
