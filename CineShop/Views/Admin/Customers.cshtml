@model IEnumerable<CineShop.Models.Customer>

@{
    ViewData["Title"] = "Manage Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var role = Context.Session.GetString("UserRole");
    var isAdmin = role == "Admin";
}

<div class="container py-5 @(isAdmin ? "admin-theme" : "")">
   
    @if (isAdmin)
    {
        <div class="admin-banner text-dark fw-bold text-center py-2 mb-4 rounded shadow-sm">
            <i class="fa fa-user-shield me-2"></i> You are logged in as <span class="text-uppercase">ADMIN</span>
        </div>
    }

  
    <div class="text-center mb-5">
        <h1 class="text-warning fw-bold display-5">
            <i class="fa fa-users me-2"></i> Customer Management
        </h1>
        <p class="lead text-light">
            View and manage all CineShop customers—from billing details to delivery preferences.
        </p>
    </div>

  
    <div class="text-center d-flex justify-content-center flex-wrap gap-3 mb-5">
        <a asp-action="AddCustomer" class="btn btn-outline-warning btn-lg fw-semibold px-4 shadow-sm">
            <i class="fa fa-plus-circle me-2"></i> Add New Customer
        </a>
        <a asp-action="Index" class="btn btn-outline-success btn-lg fw-semibold px-4 shadow-sm">
            <i class="fa fa-tools me-2"></i> Back to Admin Dashboard
        </a>
    </div>

 
    <div class="table-responsive">
        <table class="table table-dark table-hover border border-warning rounded overflow-hidden">
            <thead class="table-warning text-dark">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Billing Address</th>
                    <th>Billing City</th>
                    <th>Billing Zip</th>
                    <th>Delivery Address</th>
                    <th>Delivery City</th>
                    <th>Delivery Zip</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="align-middle">
                        <td class="text-light">@item.FirstName</td>
                        <td class="text-light">@item.LastName</td>
                        <td class="text-light">@item.BillingAddress</td>
                        <td class="text-light">@item.BillingCity</td>
                        <td class="text-light">@item.BillingZip</td>
                        <td class="text-light">@item.DeliveryAddress</td>
                        <td class="text-light">@item.DeliveryCity</td>
                        <td class="text-light">@item.DeliveryZip</td>
                        <td class="text-success fw-semibold">@item.EmailAddress</td>
                        <td class="text-success fw-semibold">@item.PhoneNo</td>
                        <td class="text-center text-nowrap">
                            <a asp-action="EditCustomer" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning me-2" title="Edit">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                            <a asp-controller="Admin" asp-action="CustomerDetails" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-2" title="Details">
                                <i class="fa-solid fa-circle-info"></i>
                            </a>
                            <a asp-action="DeleteCustomer" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                                <i class="fa-solid fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
