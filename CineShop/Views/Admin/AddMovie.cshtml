@model CineShop.Models.Movie

@{
    ViewData["Title"] = "Add Movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <h1 class="text-warning text-center fw-bold mb-4">
        <i class="fa fa-plus-circle me-2"></i> Add a New Movie
    </h1>
    <p class="lead text-light text-center mb-4">
        Fill in the details below to add a new title to your CineShop collection.
    </p>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card bg-dark text-light border-warning shadow-sm">
                <div class="card-body">
                    <form asp-action="AddMovie">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label text-warning fw-semibold"></label>
                            <input asp-for="Title" class="form-control bg-dark text-light border-warning" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Genre" class="form-label text-warning fw-semibold"></label>
                            <input asp-for="Genre" class="form-control bg-dark text-light border-warning" />
                            <span asp-validation-for="Genre" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Director" class="form-label text-warning fw-semibold"></label>
                            <input asp-for="Director" class="form-control bg-dark text-light border-warning" />
                            <span asp-validation-for="Director" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ReleaseYear" class="form-label text-warning fw-semibold"></label>
                            <input asp-for="ReleaseYear" class="form-control bg-dark text-light border-warning" />
                            <span asp-validation-for="ReleaseYear" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label text-warning fw-semibold"></label>
                            <input asp-for="Price" class="form-control bg-dark text-light border-warning" />
                            <span asp-validation-for="Price" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Image" class="form-label text-warning fw-semibold">Image URL</label>
                            <input asp-for="Image" class="form-control bg-dark text-light border-warning" />
                            <span asp-validation-for="Image" class="text-danger small"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-warning fw-bold">
                                <i class="fa fa-save me-2"></i> Add New Movie
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-4">
                <a asp-controller= "Admin" asp-action="Index" class="btn btn-warning fw-bold">
                    <i class="fa-solid fa-arrow-left"></i> Back to Admin Dashboard
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
