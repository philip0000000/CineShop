@model IEnumerable<CineShop.Models.Movie>

@{
    ViewData["Title"] = "Manage Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var role = Context.Session.GetString("UserRole");
    var isAdmin = role == "Admin";
}

<div class="container py-5 @(isAdmin ? "admin-theme" : "")">
    
    @if (isAdmin)
    {
        <div class="admin-banner text-dark fw-bold text-center py-2 mb-4 rounded shadow-sm">
            <i class="fa fa-user-shield me-2"></i> You are logged in as <span class="text-uppercase">ADMIN</span>
        </div>
    }

   
    <div class="text-center mb-5">
        <h1 class="display-5 text-warning fw-bold">
            <i class="fa fa-film me-2"></i> Movie Management
        </h1>
        <p class="lead text-light">
            Curate your CineShop collection—add new titles, edit details, or remove outdated listings.
        </p>

        <div class="d-flex justify-content-center flex-wrap gap-3 mt-4">
            <a asp-action="AddMovie" class="btn btn-outline-warning btn-lg fw-semibold px-4 shadow-sm">
                <i class="fa fa-plus-circle me-2"></i> Add New Movie
            </a>
            <a asp-action="Index" class="btn btn-outline-success btn-lg fw-semibold px-4 shadow-sm">
                <i class="fa fa-tools me-2"></i> Back to Admin Dashboard
            </a>
        </div>
    </div>

  
    <h2 class="text-center text-warning mb-4">
        <i class="fa fa-clapperboard me-2"></i> Your Movie Listings
    </h2>

    <div class="table-responsive">
        <table class="table table-dark table-hover border border-warning rounded overflow-hidden">
            <thead class="table-warning text-dark">
                <tr>
                    <th>Title</th>
                    <th>Genre</th>
                    <th>Director</th>
                    <th>Release Year</th>
                    <th>Price</th>
                    <th>Image</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model)
                {
                    <tr class="align-middle">
                        <td class="text-light">@movie.Title</td>
                        <td class="text-light">@movie.Genre</td>
                        <td class="text-light">@movie.Director</td>
                        <td class="text-light">@movie.ReleaseYear</td>
                        <td class="text-success fw-semibold">@movie.Price.ToString("C")</td>
                        <td>
                            @if (!string.IsNullOrEmpty(movie.Image))
                            {
                                <img src="@movie.Image" alt="Movie Poster" class="img-thumbnail border border-warning" style="max-height: 80px;" />
                            }
                            else
                            {
                                <span class="text-muted">No image</span>
                            }
                        </td>
                        <td class="text-center text-nowrap">
                            <a asp-action="EditMovie" asp-route-id="@movie.Id" class="btn btn-sm btn-outline-warning me-2" title="Edit">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                            <a asp-action="Details" asp-controller="Movies" asp-route-id="@movie.Id" class="btn btn-sm btn-outline-info me-2" title="Details">
                                <i class="fa-solid fa-circle-info"></i>
                            </a>
                            <a asp-action="DeleteMovie" asp-route-id="@movie.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                                <i class="fa-solid fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

