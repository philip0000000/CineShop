@{
    var title = ViewData["Title"] as string ?? "Movie Shop";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - Movie Shop</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
  <body class="d-flex flex-column min-vh-100">
    <nav class="navbar navbar-expand-lg custom-navbar">
        <div class="container">
            <!-- Logo -->
            <a class="navbar-brand fw-bold text-warning" asp-controller="Home" asp-action="Index">
                🎬 CineShop
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <!-- LEFT side: main navigation -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link fw-bold text-warning" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link fw-bold text-warning" asp-controller="Movies" asp-action="Index">Movies</a></li>

                    <li class="nav-item"><a class="nav-link fw-bold text-warning" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                </ul>

                <!-- RIGHT side: cart + login/register -->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link fw-bold text-warning" asp-controller="Cart" asp-action="Index">🛒 Cart</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-bold text-warning login-link" asp-controller="Account" asp-action="Login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-bold text-warning register-link" asp-controller="Account" asp-action="Register">Register</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- MAIN -->
    <main class="container mt-4">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="bg-light text-muted text-center py-3 mt-auto border-top">
        &copy; @DateTime.Now.Year - Movie Shop
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
