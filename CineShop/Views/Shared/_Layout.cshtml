@{
    var title = ViewData["Title"] as string ?? "Movie Shop";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - CineShop</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/CineShop.styles.css" asp-append-version="true" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/FontAwesome/css/all.css" asp-append-version="true" />
    

</head>
<body class="d-flex flex-column min-vh-100">
    <nav class="navbar navbar-expand-lg custom-navbar">
        <div class="container">
            <a class="navbar-brand fw-bold text-warning" asp-controller="Home" asp-action="Index">
                ðŸŽ¬ CineShop
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link fw-bold text-warning" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-house"></i> Home</a></li>
                                       
                    <li class="nav-item">
                        <a class="nav-link fw-bold text-warning" asp-controller="Login" asp-action="Index">
                            <i class="fa-solid fa-tools me-2"></i>
                             Admin
                        </a>
                    </li>
                    <li class="nav-item"><a class="nav-link fw-bold text-warning" asp-controller="Customer" asp-action="Index"><i class="fa-solid fa-users"></i> Customer</a></li>

                    <li class="nav-item"><a class="nav-link fw-bold text-warning" asp-controller="Movies" asp-action="ShowSearchForm"> <i class="fa-solid fa-magnifying-glass"></i> Search</a></li>

                </ul>

                <ul class="navbar-nav">


                    <li class="nav-item"><a class="nav-link fw-bold text-warning register-link" asp-controller="Login" asp-action="Register"><i class="fa-solid fa-user-plus"></i> Register</a></li>
                    <li class="nav-item"><a class="nav-link fw-bold text-warning login-link" asp-controller="Login" asp-action="Index"><i class="fa-solid fa-right-to-bracket"></i> Login</a></li>
                    <li class="nav-item"><a class="nav-link fw-bold text-warning" asp-controller="Cart" asp-action="Index"><i class="fa-solid fa-cart-shopping"></i>    Cart   </a></li>

                </ul>
            </div>
        </div>
    </nav>

    <main class="container mt-4">
        @RenderBody()
    </main>

    <footer class="bg-dark text-light text-center py-3 mt-auto border-top border-warning">
        &copy; @DateTime.Now.Year â€“ CineShop
    </footer>


    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
