@model CineShop.Models.Movie

<div class="col-md-3">
    <div class="card bg-dark text-light border-warning shadow-sm h-100">
        <img src="@Model.Image" alt="@Model.Title" class="card-img-top img-fluid border-bottom border-warning" style="max-height: 200px; object-fit: cover;" />

        <div class="card-body d-flex flex-column justify-content-between">
            <div>
                <h5 class="card-title text-warning fw-bold">@Model.Title</h5>
                <p class="card-text mb-2">
                    <span class="text-muted">Genre:</span> @Model.Genre<br />
                    <span class="text-muted">Director:</span> @Model.Director<br />
                    <span class="text-muted">Year:</span> @Model.ReleaseYear
                </p>
                <p class="fw-semibold text-success">Price: @Model.Price.ToString("C")</p>
            </div>
            <div class="d-grid gap-2 mt-3">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info btn-sm">
                    <i class="fa fa-info-circle me-1"></i> Details
                </a>
                <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@Model.Id" class="btn btn-outline-success btn-sm">
                    <i class="fa fa-cart-plus me-1"></i> Add to Cart
                </a>
            </div>
        </div>
    </div>
</div>
