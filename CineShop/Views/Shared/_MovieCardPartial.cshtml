@model CineShop.Models.Movie

<div class="col-md-3">
    <div class="card movie-card bg-dark text-light border-warning shadow-sm h-100">
        <!-- Poster Image -->
        <img src="@Url.Content(Model.Image)" alt="@Model.Title poster"
             class="card-img-top img-fluid border-bottom border-warning"
             style="height: 300px; object-fit: cover;" />

        <!-- Movie Info -->
        <div class="card-body d-flex flex-column justify-content-between text-center">
            <div>
                <h5 class="card-title text-warning fw-bold mb-2">@Model.Title <span class="text-muted">(@Model.ReleaseYear)</span></h5>
                <p class="card-text">
                    <span class="text-muted">Genre:</span> @Model.Genre<br />
                    <span class="text-muted">Director:</span> @Model.Director 
                </p>
                <p class="fw-semibold text-success mb-0">
                    Price: @Model.Price.ToString("C")
                </p>
            </div>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-center gap-2 mt-3">
                <a asp-controller="Movies" asp-action="Details" asp-route-id="@Model.Id"
                   class="btn btn-outline-info btn-sm">
                    <i class="fa fa-info-circle me-1"></i> Details
                </a>
                <a asp-controller="Cart" asp-action="Add" asp-route-id="@Model.Id"
                   class="btn btn-outline-success btn-sm">
                    <i class="fa fa-cart-plus me-1"></i> Add to Cart
                </a>
            </div>
        </div>
    </div>
</div>

