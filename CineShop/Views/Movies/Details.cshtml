@model CineShop.Models.Movie

@{
    ViewData["Title"] = "Movie Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var role = Context.Session.GetString("UserRole");
    var isAdmin = role == "Admin";
}

<div class="container py-5">
   
    <div class="text-center mb-5">
        <h1 class="text-warning fw-bold display-5">
            <i class="fa fa-film me-2"></i> @Model.Title
        </h1>
    </div>

   
    <div class="row justify-content-center align-items-center g-5 mb-5">
       
        <div class="col-md-5 text-center">
            @if (!string.IsNullOrWhiteSpace(Model.Image))
            {
                <img src="@Model.Image" alt="@Model.Title poster"
                     class="img-fluid border border-warning shadow-sm rounded"
                     style="max-height: 400px; object-fit: cover;" />
            }
            else
            {
                <span class="text-muted">No image available</span>
            }
        </div>

       
        <div class="col-md-5">
            <div class="card bg-dark border-warning shadow-sm">
                <div class="card-header text-warning fw-semibold">
                    <i class="fa fa-info-circle me-2"></i> Movie Details
                </div>
                <div class="card-body">
                    <ul class="list-unstyled fs-5 text-light mb-0">
                        <li><span class="text-muted">Genre:</span> @Model.Genre</li>
                        <li><span class="text-muted">Director:</span> @Model.Director</li>
                        <li><span class="text-muted">Release Year:</span> @Model.ReleaseYear</li>
                        <li><span class="text-muted">Price:</span> <span class="text-success fw-semibold">@Model.Price.ToString("C")</span></li>
                    </ul>

                   
                    <div class="d-grid mt-4">
                        <a asp-controller="Cart" asp-action="Add" asp-route-id="@Model.Id"
                           class="btn btn-outline-success btn-lg fw-semibold">
                            <i class="fa fa-cart-plus me-2"></i> Add to Cart
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

   
    <div class="text-center d-flex justify-content-center flex-wrap gap-3">
        @if (isAdmin)
        {
            <a asp-controller="Admin" asp-action="Movies" class="btn btn-outline-warning btn-lg fw-semibold px-4 shadow-sm">
                <i class="fa fa-film me-2"></i> Back to Movie Management
            </a>
        }
        else
        {
            <a asp-controller="Movies" asp-action="Index" class="btn btn-outline-success btn-lg fw-semibold px-4 shadow-sm">
                <i class="fa fa-film me-2"></i> Back to Browse Movies
            </a>
        }
    </div>
</div>
