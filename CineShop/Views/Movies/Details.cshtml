@model CineShop.Models.Movie

@{
    ViewData["Title"] = "Movie Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // var isAdmin = HttpContext.Session.GetString("UserRole") == "Admin";
    var role = Context.Session.GetString("UserRole");
    var isAdmin = role == "Admin";

}
<div class="container py-4">
    <!-- Header -->
    <h1 class="text-warning text-center fw-bold mb-3">
        <i class="fa fa-film me-2"></i> @Model.Title
    </h1>

    <!-- Compact Layout: Poster + Details Side by Side -->
    <div class="row justify-content-center align-items-center g-4">
        <!-- Poster with Zoom Effect -->
        <div class="col-md-5 text-center">
            @if (!string.IsNullOrWhiteSpace(Model.Image))
            {
                <img src="@Model.Image" alt="@Model.Title poster"
                     class="img-fluid movie-poster border border-warning shadow"
                     style="max-height: 400px; object-fit: cover;" />
            }
            else
            {
                <span class="text-muted">No image available</span>
            }
        </div>

        <!-- Movie Info -->
        <div class="col-md-5">
            <ul class="list-unstyled fs-5 text-light">
                <li><span class="text-muted">Genre:</span> @Model.Genre</li>
                <li><span class="text-muted">Director:</span> @Model.Director</li>
                <li><span class="text-muted">Release Year:</span> @Model.ReleaseYear</li>
                <li><span class="text-muted">Price:</span> <span class="text-success fw-semibold">@Model.Price.ToString("C")</span></li>
            </ul>

            <!-- Action Buttons -->
            <div class="d-flex gap-3 mt-4">
                <form asp-controller="Cart" asp-action="Add" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="movieId" value="@Model.Id" />
                    <button type="submit" class="btn btn-outline-success btn-sm">
                        <i class="fa fa-cart-plus me-1"></i> Add to Cart
                    </button>
                </form>

            </div>
        </div>
    </div>
</div>
    <div class="d-flex justify-content-center gap-3">
        @if (isAdmin)
        {
            <a asp-controller="Admin" asp-action="Movies" class="btn btn-warning fw-bold">
                <i class="fa fa-film me-2"></i> Back to Movie Management
            </a>
        }
        else
        {
            <a asp-controller="Movies" asp-action="Index" class="btn btn-warning fw-bold">
                <i class="fa fa-film me-2"></i> Back to Browse Movies
            </a>
        }
    </div>

