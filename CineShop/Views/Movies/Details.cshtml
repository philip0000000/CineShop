@model CineShop.Models.Movie

@{
    ViewData["Title"] = "Movie Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <h1 class="text-warning text-center fw-bold mb-4">
        <i class="fa fa-film me-2"></i> @Model.Title
    </h1>
    <p class="lead text-light text-center mb-4">
        Dive into the details of this cinematic gem—from genre and director to pricing and release year.
    </p>

    <div class="card bg-dark text-light border-warning shadow-sm mb-4">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 text-warning">Title</dt>
                <dd class="col-sm-9">@Model.Title</dd>

                <dt class="col-sm-3 text-warning">Genre</dt>
                <dd class="col-sm-9">@Model.Genre</dd>

                <dt class="col-sm-3 text-warning">Director</dt>
                <dd class="col-sm-9">@Model.Director</dd>

                <dt class="col-sm-3 text-warning">Release Year</dt>
                <dd class="col-sm-9">@Model.ReleaseYear</dd>

                <dt class="col-sm-3 text-warning">Price</dt>
                <dd class="col-sm-9 text-success fw-semibold">@Model.Price.ToString("C")</dd>

                <dt class="col-sm-3 text-warning">Poster</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <img src="@Model.Image" alt="Movie Poster" class="img-thumbnail" style="max-height: 200px;" />
                    }
                    else
                    {
                        <span class="text-muted">No image available</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div class="d-flex justify-content-center gap-3">
        
        <a asp-controller="Admin" asp-action="EditMovie" asp-route-id="@Model.Id" class="btn btn-warning fw-bold">
            <i class="fa-solid fa-pen-to-square"></i>Edit Movie
        </a>
        <a asp-controller="Admin" asp-action="Movies" class="btn btn-warning fw-bold">
            <i class="fa fa-film me-2"></i> Back to Movie Management
        </a>
    </div>
</div>
