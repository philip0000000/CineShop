@model List<CineShop.Models.Movie>?

@{
    ViewData["Title"] = "Search Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <!-- Header -->
    <h1 class="text-warning text-center fw-bold mb-4">
        <i class="fa fa-search me-2"></i> Search for a Movie
    </h1>
    <p class="lead text-light text-center mb-4">
        Find your next favorite film—from Nordic dramas to cozy thrillers.
    </p>

    <!-- Search Form -->
    <div class="row justify-content-center mb-5">
        <div class="col-md-6">
            <div class="card bg-dark text-light border-warning shadow-sm">
                <div class="card-body">
                    <form asp-action="ShowSearchResult" method="post">
                        <div class="mb-3">
                            <label for="SearchPhrase" class="form-label text-warning fw-semibold">Movie Title</label>
                            <input name="SearchPhrase" class="form-control bg-dark text-light border-warning"
                                   placeholder="e.g. Inception" value="@ViewBag.SearchPhrase" />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-warning fw-bold">
                                <i class="fa fa-search me-2"></i> Search
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Message -->
    @if (ViewBag.ShowResults == false && ViewBag.Message != null)
    {
        <div class="alert alert-info text-center fw-bold mb-4">
            @ViewBag.Message
        </div>

        <div class="text-center mb-5 d-flex justify-content-center gap-3">
            @* <a asp-controller="Movies" asp-action="ShowSearchForm" class="btn btn-warning fw-bold px-4">
                <i class="fa-solid fa-rotate-left me-2"></i> Back to Search
            </a> *@
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-warning fw-bold px-4">
                <i class="fa-solid fa-house me-2"></i> Back to Home
            </a>
        </div>
    }

    <!-- Results -->
    @if (ViewBag.ShowResults == true && Model != null && Model.Any())
    {
        <h2 class="text-light text-center mb-4">Search Results</h2>
        <div class="row g-4">
            @foreach (var movie in Model)
            {
                @Html.Partial("_MovieCardPartial", movie)
            }
        </div>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
