@{
    ViewData["Title"] = "Search Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <h1 class="text-warning text-center fw-bold mb-4">
        <i class="fa fa-search me-2"></i> Search for a Movie
    </h1>
    <p class="lead text-light text-center mb-4">
        Enter a movie title to explore your CineShop collection.
    </p>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-dark text-light border-warning shadow-sm">
                <div class="card-body">
                    <form asp-action="ShowSearchResult">
                        <div class="mb-3">
                            <label for="SearchPhrase" class="form-label text-warning fw-semibold">Movie Title</label>
                            <input name="SearchPhrase" class="form-control bg-dark text-light border-warning" placeholder="e.g. Inception" />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-warning fw-bold">
                                <i class="fa fa-search me-2"></i> Search
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-4">
                <a asp-action="Index" class="btn btn-outline-light">
                    <i class="fa fa-arrow-left me-1"></i> Back to Movie List
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
