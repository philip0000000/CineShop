@model CineShop.ViewModels.CartCheckoutViewModel

@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <!-- Header -->
    <div class="text-center mb-5">
        <h1 class="text-warning fw-bold display-5">
            <i class="fa fa-credit-card me-2"></i> Checkout
        </h1>
        <p class="lead text-light">
            Complete your order by entering your details below.
        </p>
    </div>

    <div class="row g-4">
        <!-- Existing Customer -->
        <div class="col-md-6">
            <div class="card bg-dark border-success shadow-sm">
                <div class="card-header text-success fw-semibold">
                    <i class="fa fa-user-check me-2"></i> Existing Customer
                </div>
                <div class="card-body">
                    <p class="text-light">Enter your email to place your order.</p>

                    <form method="post" action="@Url.Action("Create","Orders")" novalidate>
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                        <div class="mb-3">
                            <label class="form-label text-warning">Email</label>
                            <input name="EmailAddress" type="email" class="form-control bg-dark text-light border-warning" required />
                        </div>

                        <button type="submit" class="btn btn-success fw-bold">
                            <i class="fa-solid fa-plus me-2"></i> Place Order
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- New Customer -->
        <div class="col-md-6">
            <div class="card bg-dark border-warning shadow-sm">
                <div class="card-header text-warning fw-semibold">
                    <i class="fa fa-user-plus me-2"></i> New Customer
                </div>
                <div class="card-body">
                    <p class="text-light">Fill in all fields to complete your purchase.</p>

                    <form method="post" action="@Url.Action("Create","Orders")" novalidate>
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label text-warning">First Name</label>
                                <input name="Firstname" class="form-control bg-dark text-light border-warning" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label text-warning">Last Name</label>
                                <input name="Lastname" class="form-control bg-dark text-light border-warning" required />
                            </div>
                        </div>

                        <div class="mb-2 text-light fw-bold">Billing Address</div>
                        <div class="mb-3">
                            <label class="form-label text-warning">Street</label>
                            <input name="BillingAddress" class="form-control bg-dark text-light border-warning" required />
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label text-warning">Zip</label>
                                <input name="BillingZip" class="form-control bg-dark text-light border-warning" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label text-warning">City</label>
                                <input name="BillingCity" class="form-control bg-dark text-light border-warning" required />
                            </div>
                        </div>

                        <div class="mb-2 text-light fw-bold">Delivery Address</div>
                        <div class="mb-3">
                            <label class="form-label text-warning">Street</label>
                            <input name="DeliveryAddress" class="form-control bg-dark text-light border-warning" required />
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label text-warning">Zip</label>
                                <input name="DeliveryZip" class="form-control bg-dark text-light border-warning" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label text-warning">City</label>
                                <input name="DeliveryCity" class="form-control bg-dark text-light border-warning" required />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label text-warning">Email</label>
                                <input name="EmailAddress" type="email" class="form-control bg-dark text-light border-warning" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label text-warning">Phone</label>
                                <input name="PhoneNo" class="form-control bg-dark text-light border-warning" required />
                            </div>
                        </div>

                        <button type="submit" class="btn btn-warning fw-bold">
                            <i class="fa-solid fa-plus me-2"></i> Place Order
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Navigation Buttons -->
    <div class="text-center mt-5">
        <a class="btn btn-outline-success btn-lg fw-semibold me-2" href="@Url.Action("Index", "Cart")">
            <i class="fa-solid fa-cart-shopping me-2"></i> Back to My Cart
        </a>
        <a asp-controller="Movies" asp-action="Index" class="btn btn-outline-warning btn-lg fw-semibold">
            <i class="fa-solid fa-arrow-left me-2"></i> Back to Movies
        </a>
    </div>
</div>
