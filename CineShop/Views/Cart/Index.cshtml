@model IEnumerable<CineShop.Models.CartItem>

<h2>Your Cart</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Price</td>
                <td>@item.Quantity</td>
                <td>@(item.Price* item.Quantity)</td>
            </tr>
        }
    </tbody>
</table>

<p><strong>Total:</strong> @ViewBag.Total</p>
