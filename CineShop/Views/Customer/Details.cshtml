@model CineShop.Models.Customer

@{
    ViewData["Title"] = "My Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <h1 class="text-warning text-center fw-bold mb-4">
        <i class="fa-solid fa-user me-2"></i> My Profile
    </h1>
    <p class="lead text-light text-center mb-4">
        Here's your saved information. Keep it up to date for smooth deliveries and billing.
    </p>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card bg-dark text-light border-warning shadow-sm">
                <div class="card-body">
                    <h4 class="text-warning fw-bold mb-3">@Model.FirstName @Model.LastName</h4>

                    <div class="mb-3">
                        <span class="text-muted">Email:</span>
                        <span class="fw-semibold">@Model.EmailAddress</span>
                    </div>
                    <div class="mb-3">
                        <span class="text-muted">Phone:</span>
                        <span class="fw-semibold">@Model.PhoneNo</span>
                    </div>

                    <hr class="border-warning" />

                    <h5 class="text-warning fw-bold">Billing Information</h5>
                    <div class="mb-2">
                        <span class="text-muted">Address:</span>
                        <span class="fw-semibold">@Model.BillingAddress</span>
                    </div>
                    <div class="mb-2">
                        <span class="text-muted">City:</span>
                        <span class="fw-semibold">@Model.BillingCity</span>
                    </div>
                    <div class="mb-2">
                        <span class="text-muted">ZIP:</span>
                        <span class="fw-semibold">@Model.BillingZip</span>
                    </div>

                    <hr class="border-warning" />

                    <h5 class="text-warning fw-bold">Delivery Information</h5>
                    <div class="mb-2">
                        <span class="text-muted">Address:</span>
                        <span class="fw-semibold">@Model.DeliveryAddress</span>
                    </div>
                    <div class="mb-2">
                        <span class="text-muted">City:</span>
                        <span class="fw-semibold">@Model.DeliveryCity</span>
                    </div>
                    <div class="mb-2">
                        <span class="text-muted">ZIP:</span>
                        <span class="fw-semibold">@Model.DeliveryZip</span>
                    </div>
                </div>
            </div>

            <div class="text-center mt-4 d-flex justify-content-center flex-wrap gap-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning fw-bold">
                    <i class="fa-solid fa-pen-to-square me-1"></i> Edit My Info
                </a>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-warning fw-bold">
                    <i class="fa-solid fa-eye me-1"></i> Refresh Profile
                </a>
            </div>
        </div>
    </div>
</div>
